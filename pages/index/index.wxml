<!--index.wxml-->
<view class="container">
  <view class="remind-box" wx:if="{{remind}}">
    <image class="remind-img" src="/images/loading.gif" mode='aspectFill'></image>
  </view>

  <block wx:else>
    <view class="userinfo content">
      <image src='../../images/就业系统.png' mode='aspectFill'></image>    
      <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称 </button>
      <block wx:else>
        <!-- <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image> -->
        <view class="flex" >
          <text class="userinfo-nickname text-center flex-sub">Hello ,　</text>
          <open-data class="userinfo-nickname flex-sub" type="userNickName"></open-data>
        </view>
          <text class="userinfo-nickname text-center" style="margin-top:-0.5cm">choose your identity</text>    
      </block>
    
      <button bindtap="goToStuLogin" class="cu-btn round lg button-hover shadow line-blue margin" style="color:#709ceb; background-color:#ffffff; font-weight: bold; width:30%">Student</button>
      <button bindtap="goToComLogin" class="cu-btn round lg button-hover shadow line-blue margin" style="color:#709ceb; background-color:#ffffff; font-weight: bold;width:30%">Company</button>
      <button bindtap="goToAdmin" class="cu-btn round lg button-hover shadow line-blue margin" style="color:#709ceb; background-color:#ffffff; font-weight: bold;width:30%">Admin</button>
    </view>
  </block>
</view>

