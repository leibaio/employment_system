<!--pages/login/studentLogin/studentLogin.wxml-->

<view class="bg-white flex-sub radius shadow-lg loginpic">
    <image src="../../../images/studentLogo.png" mode="aspectFit" class="gif-white response" style="height:443rpx"></image>
</view>
 
<form bindsubmit="login" class="margin-bottom" >
    <view class="cu-form-group margin-top" style="">
        <view class="title cu-item cur cuIcon-people"></view>
        <input id="username" placeholder="请输入账号" name="username"></input>
    </view>
    <view class="cu-form-group margin-top" style="width:70%">
        <view class="title cu-item cur cuIcon-lock"></view>
        <input id="password" type="password" placeholder="请输入密码" name="password"></input>
    </view>
    <view class="flex solid-bottom padding-sm justify-around margin-top">
        <button class="cu-btn bg-grey lg button-hover" form-type='submit' style="color:#ffffff; background-color:#6495ED;">登录</button>
        <button bindtap="stuEnroll" class="cu-btn bg-grey lg button-hover" style="color:#ffffff; background-color:#B0C4DE">注册</button>
    </view>
</form>



